rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow access to trips collection
    match /trips/{tripId} {
      // Anyone can read trips (for public viewing)
      allow read: if true;
      
      // Allow creating trips with basic validation
      allow create: if isValidTripData(request.resource.data);
      
      // Allow updates and deletes (client-side auth handles this)
      allow update, delete: if true;
    }
    
    // Allow other collections if needed
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Basic validation function
    function isValidTripData(data) {
      return data.keys().hasAll(['location', 'date', 'members']) &&
             data.location is string &&
             data.location.size() > 0 &&
             data.date is string &&
             data.members is list &&
             data.members.size() > 0;
    }
  }
}
