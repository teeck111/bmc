rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow all reads
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Allow all writes for testing (temporary - make more restrictive later)
    match /{allPaths=**} {
      allow write: if request.resource.size < 10 * 1024 * 1024; // 10MB limit
    }
  }
}
